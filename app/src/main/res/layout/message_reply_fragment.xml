<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_default"
        android:fitsSystemWindows="true" />
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.12"
        android:elevation="2dp"
        tools:targetApi="lollipop">
        <com.gdgvitvellore.android.brosource.RoundedImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:src="@drawable/profilepic"
            android:scaleType="center"
            android:id="@+id/profile_image"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/profile_image"
            android:layout_toRightOf="@+id/profile_image"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="@string/test_name"
                android:id="@+id/name"
                android:textColor="@color/text_color"
                />
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:text="@string/type_direct"
                android:id="@+id/type"
                android:gravity="center"
                android:background="@drawable/rounded_view_primary_blue"
                android:padding="2dp"
                />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.065"
        android:background="@color/grey"
        >

        <TextView
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:id="@+id/attachments_count"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/text_color"
            android:text="2"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/attachments_placeholder"
            android:layout_toLeftOf="@+id/attachments_button"
            android:layout_toStartOf="@+id/attachments_button"
            android:layout_toRightOf="@id/attachments_count"
            android:layout_toEndOf="@id/attachments_count"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:textColor="@color/text_color"
            android:text="@string/download_attachment"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            />
        <ImageButton
            android:layout_alignParentEnd="true"
            android:id="@+id/attachments_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/grey"
            android:src="@drawable/ic_file_download_black_24px"
            android:padding="10dp"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.74"
        android:background="@color/white"
        android:padding="15dp"
        android:id="@+id/textView" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.08"
        android:background="@color/grey"
        android:elevation="15dp"
        android:padding="0dp"
        tools:targetApi="lollipop">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/reply"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/text_color"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:hint="@string/reply"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:textSize="15sp"
            android:layout_toStartOf="@+id/attach"
            android:layout_toLeftOf="@+id/attach" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/attach"
            android:layout_toLeftOf="@+id/send"
            android:layout_toStartOf="@+id/send"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:textColor="@color/text_color"
            android:text="@string/download_attachment"
            android:gravity="center_vertical"
            android:background="@color/grey"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_attachment_grey_24px"
            android:padding="10dp"
            />
        <ImageButton
            android:layout_alignParentEnd="true"
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/grey"
            android:src="@drawable/ic_send_white_24px"
            android:padding="10dp"
            />
    </RelativeLayout>
</LinearLayout>